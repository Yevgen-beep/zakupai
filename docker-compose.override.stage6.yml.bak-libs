  gateway:
    profiles: ["stage6"]
    build:
      context: ./services/gateway
      dockerfile: Dockerfile
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:80/health"]
      interval: 10s
      timeout: 5s
      retries: 5

  flowise:
