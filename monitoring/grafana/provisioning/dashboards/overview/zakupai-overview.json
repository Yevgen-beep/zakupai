{
  "uid": "zakupai-overview",
  "title": "ZakupAI SLO Overview",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {"from": "now-6h", "to": "now"},
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Availability (1 - error ratio)",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "(1 - avg_over_time(api_error_ratio[5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "orange", "value": 99.0},
              {"color": "green", "value": 99.5}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {"calcs": ["last"], "fields": "", "values": false},
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Error Rate (5m)",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "avg_over_time(api_error_ratio[5m]) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "orange", "value": 1},
              {"color": "red", "value": 2}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {"calcs": ["last"], "fields": "", "values": false},
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0}
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Latency p95 (5m)",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "avg_over_time(api_p95_latency[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "orange", "value": 0.6},
              {"color": "red", "value": 1.0}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {"calcs": ["last"], "fields": "", "values": false},
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0}
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Error Ratio by Service",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "api_error_ratio",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 3
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "right", "calcs": ["last"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      },
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 6}
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Latency p95 by Service",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "api_p95_latency",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3
        }
      },
      "options": {
        "legend": {"displayMode": "table", "placement": "right", "calcs": ["last"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      },
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 6}
    }
  ],
  "templating": {"list": []},
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {"type": "grafana", "uid": "-- Grafana --"},
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
