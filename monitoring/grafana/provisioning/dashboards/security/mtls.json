{
  "uid": "zak-mtls",
  "title": "ZakupAI - mTLS",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {"from": "now-6h", "to": "now"},
  "panels": [
    {
      "type": "stat",
      "title": "Handshake Errors (5m)",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status_code=\"495\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "reqps", "decimals": 3, "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "orange", "value": 0.05}, {"color": "red", "value": 0.1}]}}},
      "options": {"reduceOptions": {"calcs": ["last"], "values": false}},
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
    {
      "type": "stat",
      "title": "mTLS Protected Services Up",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "sum(up{job=~\"calc-service|risk-engine|doc-service\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "short", "thresholds": {"mode": "absolute", "steps": [{"color": "red", "value": 0}, {"color": "green", "value": 3}]}}},
      "options": {"reduceOptions": {"calcs": ["last"], "values": false}},
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Client Certificate Failures",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status_code=\"495\"}[5m])) by (service)",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "reqps"}},
      "options": {"legend": {"displayMode": "table", "placement": "right", "calcs": ["last", "max"]}},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "TLS Handshake Duration (p95)",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(tls_handshake_duration_seconds_bucket[5m])) by (le, service))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "s", "decimals": 3}},
      "options": {"legend": {"displayMode": "table", "placement": "bottom", "calcs": ["last", "max"]}},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
    },
    {
      "type": "logs",
      "title": "Handshake Audit Logs",
      "datasource": {"type": "loki", "uid": "zakupai-loki"},
      "targets": [
        {
          "expr": "{service=~\"gateway|risk-engine|calc-service\"} |= \"SSL\"",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 9, "w": 24, "x": 0, "y": 12},
      "options": {"showTime": true, "showLabels": true, "wrapLogMessage": true}
    }
  ]
}
