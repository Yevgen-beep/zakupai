{
  "uid": "zak-sec-mtls",
  "title": "ZakupAI - mTLS",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "type": "stat",
      "title": "Handshake errors (logs)",
      "id": 1,
      "datasource": {
        "type": "loki",
        "uid": "zakupai-loki"
      },
      "targets": [
        {
          "expr": "count_over_time({container=\"gateway\"} |= \"handshake\" |= \"error\"[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none"
      },
      "gridPos": {
        "h": 5,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "TLS requests proxied",
      "id": 2,
      "datasource": {
        "type": "prometheus",
        "uid": "zakupai-prom"
      },
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total[5m]) or vector(0)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 6,
        "y": 0
      },
      "options": {
        "legend": {
          "displayMode": "hidden"
        }
      }
    },
    {
      "type": "logs",
      "title": "Recent TLS-related logs",
      "id": 3,
      "datasource": {
        "type": "loki",
        "uid": "zakupai-loki"
      },
      "targets": [
        {
          "expr": "{container=\"gateway\"} |= \"TLS\"",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 8
      }
    }
  ],
  "templating": {
    "list": []
  }
}