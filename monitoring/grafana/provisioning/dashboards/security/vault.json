{
  "uid": "zak-sec-vault",
  "title": "ZakupAI - Vault",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "15s",
  "time": {"from": "now-1h", "to": "now"},
  "panels": [
    {
      "type": "stat",
      "title": "Vault sealed",
      "id": 1,
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "max(vault_core_unsealed == 0)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "red", "value": 1}
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"text": "unsealed"},
                "1": {"text": "sealed"}
              }
            }
          ]
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none"
      },
      "gridPos": {"h": 5, "w": 6, "x": 0, "y": 0}
    },
    {
      "type": "stat",
      "title": "Vault uptime (h)",
      "id": 5,
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "(time() - max(process_start_time_seconds)) / 3600",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "hours",
          "decimals": 2
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none"
      },
      "gridPos": {"h": 5, "w": 6, "x": 6, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Audit log entries",
      "id": 2,
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "rate(vault_audit_log_entries_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops" ,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 5},
      "options": {
        "legend": {"displayMode": "hidden"}
      }
    },
    {
      "type": "timeseries",
      "title": "Request latency",
      "id": 3,
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(vault_request_duration_seconds_bucket[5m])))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 5},
      "options": {
        "legend": {"displayMode": "hidden"}
      }
    },
    {
      "type": "timeseries",
      "title": "Token creations",
      "id": 4,
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "rate(vault_token_create_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 13},
      "options": {
        "legend": {"displayMode": "hidden"}
      }
    }
  ]
}
