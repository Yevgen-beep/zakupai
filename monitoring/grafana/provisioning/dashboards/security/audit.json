{
  "uid": "zak-sec-audit",
  "title": "ZakupAI - Audit",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "service",
        "label": "Service",
        "datasource": {
          "type": "prometheus",
          "uid": "zakupai-prom"
        },
        "definition": "label_values(http_requests_total, service)",
        "multi": true,
        "includeAll": true,
        "refresh": 2
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Audit endpoint throughput",
      "id": 1,
      "datasource": {
        "type": "prometheus",
        "uid": "zakupai-prom"
      },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_requests_total{service=~\"$service\", handler=~\".*audit.*\"}[5m])) or vector(0)",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Audit failures",
      "id": 2,
      "datasource": {
        "type": "prometheus",
        "uid": "zakupai-prom"
      },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_requests_total{service=~\"$service\", handler=~\".*audit.*\", status_code=~\"5..\"}[5m])) or vector(0)",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Audit error logs (Loki)",
      "id": 3,
      "datasource": {
        "type": "loki",
        "uid": "zakupai-loki"
      },
      "targets": [
        {
          "expr": "sum(rate({job=\"audit\", level=\"error\"}[5m])) or vector(0)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "options": {
        "legend": {
          "displayMode": "hidden"
        }
      }
    },
    {
      "type": "logs",
      "title": "Audit trail logs",
      "id": 4,
      "datasource": {
        "type": "loki",
        "uid": "zakupai-loki"
      },
      "targets": [
        {
          "expr": "{container=~\"calc-service|risk-engine|etl-service\"} |= \"audit\"",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 24
      }
    }
  ]
}