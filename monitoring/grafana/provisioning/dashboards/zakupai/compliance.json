{
  "uid": "zak-compliance",
  "title": "ZakupAI - Compliance Events",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Anti-Dumping % by Service/Lot",
      "targets": [
        {
          "expr": "anti_dumping_percent",
          "legendFormat": "{{service}} - Lot {{lot_id}}",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "zakupai-prom"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 0}
    },
    {
      "type": "table",
      "title": "Recent Anti-Dumping Alerts",
      "targets": [
        {
          "expr": "ALERTS{alertname=\"AntiDumpingTooHigh\", alertstate=\"firing\"}",
          "instant": true,
          "format": "table",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "zakupai-prom"}
        }
      ],
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 0}
    }
  ]
}
