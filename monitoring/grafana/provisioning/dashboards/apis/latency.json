{
  "uid": "zak-latency",
  "title": "ZakupAI - API Latency",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 2,
  "refresh": "15s",
  "time": {"from": "now-1h", "to": "now"},
  "panels": [
    {
      "type": "stat",
      "title": "Global p95 Latency (5m)",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "avg(api_p95_latency)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "orange", "value": 0.6},
              {"color": "red", "value": 1.0}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {"calcs": ["lastNotNull"], "fields": "", "values": false},
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Latency p95 by Service",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "api_p95_latency",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "s", "decimals": 3}},
      "options": {
        "legend": {"displayMode": "table", "placement": "right", "calcs": ["last"]},
        "tooltip": {"mode": "multi", "sort": "desc"}
      },
      "gridPos": {"h": 9, "w": 18, "x": 6, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Average Latency (5m rate)",
      "datasource": {"type": "prometheus", "uid": "zakupai-prom"},
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m])",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "s", "decimals": 3}},
      "options": {
        "legend": {"displayMode": "list", "placement": "right"},
        "tooltip": {"mode": "multi"}
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 9}
    }
  ]
}
