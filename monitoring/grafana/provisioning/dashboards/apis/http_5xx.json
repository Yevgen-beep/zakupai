{
  "uid": "zak-api-5xx",
  "title": "ZakupAI - API HTTP 5xx",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "15s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "service",
        "label": "Service",
        "datasource": {
          "type": "prometheus",
          "uid": "zakupai-prom"
        },
        "definition": "label_values(http_requests_total{status_code=~\"5..\"}, service)",
        "multi": true,
        "includeAll": true,
        "refresh": 2
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "5xx error rate",
      "id": 1,
      "datasource": {
        "type": "prometheus",
        "uid": "zakupai-prom"
      },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_requests_total{service=~\"$service\", status_code=~\"5..\"}[5m])) or vector(0)",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      },
      "gridPos": {
        "h": 10,
        "w": 16,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "Current worst service",
      "id": 2,
      "datasource": {
        "type": "prometheus",
        "uid": "zakupai-prom"
      },
      "targets": [
        {
          "expr": "topk(1, sum by (service) (rate(http_requests_total{service=~\"$service\", status_code=~\"5..\"}[5m]))) or vector(0)",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "value",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value"
      },
      "gridPos": {
        "h": 5,
        "w": 8,
        "x": 16,
        "y": 0
      }
    },
    {
      "type": "table",
      "title": "Top failing endpoints",
      "id": 3,
      "datasource": {
        "type": "prometheus",
        "uid": "zakupai-prom"
      },
      "targets": [
        {
          "expr": "topk(10, rate(http_requests_total{service=~\"$service\", status_code=~\"5..\"}[5m])) or vector(0)",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "auto"
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 11,
        "w": 24,
        "x": 0,
        "y": 10
      }
    }
  ]
}