services:
  prometheus:
    networks:
      - zakupai-network
    dns:
      - 127.0.0.11
      - 8.8.8.8
    dns_search:
      - zakupai_zakupai-network
    healthcheck:
      test: ["CMD", "wget", "-qO-", "http://127.0.0.1:9095/-/ready"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 60s

  grafana:
    environment:
      GF_DASHBOARDS_DEFAULT_HOME_DASHBOARD_PATH: /etc/grafana/provisioning/dashboards/overview/zakupai-overview.json
    ports:
      - "3030:3000"
    volumes:
      - ./monitoring/grafana/provisioning:/etc/grafana/provisioning:ro
    networks:
      - zakupai-network

  loki:
    ports:
      - "3100:3100"
    restart: always
    networks:
      zakupai-network:
        aliases:
          - loki

  promtail:
    networks:
      zakupai-network:
        aliases:
          - loki

  alertmanager:
    networks:
      zakupai-network:
        aliases:
          - prometheus

  blackbox-exporter:
    networks:
      - zakupai-network
    dns:
      - 127.0.0.11
      - 8.8.8.8
    dns_search:
      - zakupai_zakupai-network

  cadvisor:
    networks:
      - zakupai-network

  alertmanager-bot:
    image: metalmatze/alertmanager-bot:0.4.3
    container_name: zakupai-alertmanager-bot-stage6
    env_file:
      - .env
    command:
      - --alertmanager.url=http://alertmanager:9093
      - --store=bolt
      - --bolt.path=/data/bot.db
      - --template.paths=/templates/default.tmpl
      - --telegram.token=${TELEGRAM_BOT_TOKEN:?set TELEGRAM_BOT_TOKEN}
      - --telegram.admin=${TELEGRAM_ADMIN_ID:?set TELEGRAM_ADMIN_ID}
      - --log.level=info
    volumes:
      - ./monitoring/alertmanager-bot:/data
      - ./monitoring/templates:/templates
    networks:
      - zakupai-network
    restart: unless-stopped

  nginx-exporter:
    image: nginx/nginx-prometheus-exporter:1.2
    container_name: zakupai-nginx-exporter-stage6
    command:
      - -nginx.scrape-uri=http://gateway:80/stub_status
    networks:
      - zakupai-network
    ports:
      - "9113:9113"
    restart: unless-stopped

  vault:
    image: hashicorp/vault:1.17
    container_name: zakupai-vault
    ports:
      - "8200:8200"
    environment:
      - VAULT_DEV_ROOT_TOKEN_ID=root
      - VAULT_DEV_LISTEN_ADDRESS=0.0.0.0:8200
    command: server -dev
    restart: always
    healthcheck:
      test: ["CMD", "wget", "-qO-", "http://127.0.0.1:8200/v1/sys/health"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      zakupai-network:
        aliases:
          - vault

networks:
  zakupai-network:
    name: zakupai_zakupai-network
    external: true
