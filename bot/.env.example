# ===========================================
# ü§ñ TELEGRAM BOT CONFIGURATION
# ===========================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather

# Webhook settings (for production/staging only)
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_key

# ===========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===========================================
POSTGRES_HOST=zakupai-db
POSTGRES_PORT=5432
POSTGRES_DB=zakupai
POSTGRES_USER=zakupai
POSTGRES_PASSWORD=zakupai
DATABASE_URL=postgresql+asyncpg://zakupai:zakupai@zakupai-db:5432/zakupai

# ===========================================
# üîó API CONFIGURATION
# ===========================================
# Internal services
GATEWAY_URL=http://zakupai-gateway
ZAKUPAI_API_URL=http://zakupai-gateway
API_KEY=changeme-super-secret
ZAKUPAI_API_KEY=changeme-super-secret

# Billing Service
BILLING_SERVICE_URL=http://zakupai-billing-service:7004

# n8n Integration for search functionality
N8N_WEBHOOK_URL=your_n8n_webhook_url_for_search

# ===========================================
# ü§ñ BOT BEHAVIOR
# ===========================================
# Telegram channels and admin settings
HOT_LOTS_CHANNEL_ID=-1001234567890
ADMIN_USER_IDS=123456789,987654321

# Features
CRON_ENABLED=true

# ===========================================
# üîß ENVIRONMENT & DEBUGGING
# ===========================================
# Options: development, staging, production
# development = polling mode (for local dev)
# staging/production = webhook mode (for servers)
ENVIRONMENT=development

# Debug settings
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# üîí SECURITY & PERFORMANCE
# ===========================================
# SSL verification (set false only for development)
SSL_VERIFY=true

# Rate limiting
REQUEST_TIMEOUT=30
MAX_REQUESTS_PER_MINUTE=10

# API key validation
API_KEY_MIN_LENGTH=10

# ===========================================
# üìù NOTES
# ===========================================
# Bot modes:
# - development: Uses polling (getUpdates), good for local testing
# - staging/production: Uses webhook (requires HTTPS endpoint)
#
# To switch to webhook mode:
# 1. Set ENVIRONMENT=production or staging
# 2. Configure TELEGRAM_WEBHOOK_URL with your HTTPS endpoint
# 3. Set TELEGRAM_WEBHOOK_SECRET for security
#
# To test: docker exec zakupai-bot env | grep TELEGRAM
